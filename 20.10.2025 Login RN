import { StatusBar } from 'expo-status-bar';
import { useState } from 'react';
import { StyleSheet, Text, View, TextInput, TouchableOpacity, Alert } from 'react-native';

export default function App() {

  function MostrarInfos() {
    Alert.alert (
   name + "\n " + email + "\n " + pass
    );
  }

const [name, setName] = useState('')
const [email, setEmail] = useState('')
const [pass, setPass] = useState('')

  return (
    <View style={styles.container}>
       <TextInput
        style={styles.input}
        placeholder='Digite'
        value={name}
        onChangeText={setName}
        keyboardType='default'
      />
           <TextInput
        style={styles.input}
        placeholder='Digite'
        value={email}
        onChangeText={setEmail}
        keyboardType='default'
      />
           <TextInput
        style={styles.input}
        placeholder='Digite'
        value={pass}
        onChangeText={setPass}
        keyboardType='numeric'
      />
       <TouchableOpacity style={styles.butao} onPress={MostrarInfos}>
        <Text style={styles.text}>Cadastrar</Text>
       </TouchableOpacity>
    
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
    alignItems: 'center',
    justifyContent: 'center',
  },  
  input: {
    height: 40,
    width: 200,
    margin: 10,
    borderWidth: 1,
    borderColor: 'black',
    borderRadius: 5,
    paddingLeft: 10,
  },
  butao: {
    backgroundColor: 'white',
    padding: 10,
    borderRadius: 5,
    margin: 10,
    borderWidth: 1, 
    borderColor: 'black', 
    borderRadius: 5,
  },
  text: {
    color: 'black',
  },
});
