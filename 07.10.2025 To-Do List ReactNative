import { StatusBar } from 'expo-status-bar';
import React, { useState } from 'react';
import { StyleSheet, Text, View, TouchableOpacity, FlatList, TextInput } from 'react-native';



export default function App() {

  const [contador, setContador] = useState(0)

  
  const [tarefa, setTarefa] = useState('')
  const [tarefas, setTarefas] = useState(['']);

  function addTarefa() {
    setTarefas([...tarefas, tarefa]); 
    setTarefa('')
  }
  function limpar() {
    setTarefas('')
  }

  return (
    <View style={styles.container}>
      <Text style={styles.text} >{contador}</Text>
      <TouchableOpacity style={styles.butao} onPress={() => setContador(contador + 1)}> Aumentar</TouchableOpacity>

      <View style={styles.linha}>
        <TextInput
          style={styles.input}
          placeholder='Digite uma nova tarefa'
          value={tarefa}
          onChangeText={setTarefa}
          keyboardType='default'
        />
        <TouchableOpacity style={styles.butao} onPress={addTarefa}>
          <Text style={styles.text}>Add Tarefa</Text>
        </TouchableOpacity>
        <TouchableOpacity style={styles.butao} onPress={limpar}>
          <Text style={styles.text}>Limpar Lista</Text>
        </TouchableOpacity>
      </View>

      <FlatList
        data={tarefas}
        keyExtractor={(item, index) => index.toString()}
        renderItem={({ item }) => (
            <View style={{ padding: 10, borderWidth: 1, padding: 45, margin: 5, borderColor: 'black', height: 40, width: 300, textAlign: 'center', justifyContent: 'center', alignItems: 'center', }}>
            <Text style={{ borderBottomWidth: 1 }}>{item}</Text>
            <TouchableOpacity style={styles.butao}>
              <Text style={styles.text}>Remover</Text>
            </TouchableOpacity>
          </View>
        )} />
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
    alignItems: 'center',
    justifyContent: 'center',
  },
  containerDark: {
    flex: 1,
    backgroundColor: 'black',
    alignItems: 'center',
    justifyContent: 'center',
  },
  butao: {
    backgroundColor: 'white',
    padding: 10,
    borderRadius: 5,
    margin: 10,
    borderWidth: 1,
    borderColor: 'black',
    borderRadius: 5,
  },
  text: {
    color: 'black',
  },
  input: {
    height: 40,
    width: 200,
    margin: 10,
    borderStyle: 'solid',
    borderWidth: 1,
    borderColor: 'black',
    borderRadius: 5,
    padding: 10,
  },
  title: {
    fontSize: 50,
    fontWeight: 'bold',
    marginBottom: 20,
  },
  card: {
    backgroundColor: 'lightblue',
    width: 200,
    height: 250,
    alignItems: 'center',
    borderRadius: 10,
    padding: 10,

  },
  cardtitle: {
    fontSize: 30,
    fontWeight: 'bold',
  },
  linha: {
    flexDirection: 'row'
  }
});
