import { StatusBar } from 'expo-status-bar';
import React, { useState } from 'react';
import { StyleSheet, Text, View, TouchableOpacity } from 'react-native';



export default function App() {

  const [temaEscuro, setTemaEscuro] = useState(false); 
  
  function changeTheme() {
    setTemaEscuro(!temaEscuro); 
  }
  

  return (
    <View style={temaEscuro ? styles.containerDark : styles.container}>
      <TouchableOpacity style={styles.butao} onPress={changeTheme}>
        <Text style={styles.text} >Mudar Tema</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
    alignItems: 'center',
    justifyContent: 'center',
  },
  containerDark: {
    flex: 1,
    backgroundColor: 'black',
    alignItems: 'center',
    justifyContent: 'center',
  },
  butao: {
    backgroundColor: 'white',
    padding: 10,
    borderRadius: 5,
    margin: 10,
    borderWidth: 1, 
    borderColor: 'black', 
    borderRadius: 5,
  },
  text: {
    color: 'black',
  },
  input: {
    height: 40,
    width: 200,
    margin: 10,
    borderStyle: 'solid', 
    borderWidth: 1, 
    borderColor: 'black', 
    borderRadius: 5,
  },
  title: {
    fontSize: 50,
    fontWeight: 'bold',
    marginBottom: 20,
  },
  card: {
    backgroundColor: 'lightblue', 
    width: 200,
    height: 250,
    alignItems: 'center',
    borderRadius: 10,
    padding : 10,
    
  },
  cardtitle: {
    fontSize: 30,
    fontWeight: 'bold',
  }
});
